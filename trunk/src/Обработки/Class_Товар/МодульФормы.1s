Функция ОбработкаСобытий(Издатель,Событие) Экспорт
	Сам=Сам();
	
	Если Событие.Источник="Команда" Тогда
		Команда=Событие.Описатель.Команда;
		Если Команда="Обновить" Тогда
			Сам.ОбновитьФорму();
		КонецЕсли;
	КонецЕсли;
	
	Возврат 1;
КонецФункции

	
