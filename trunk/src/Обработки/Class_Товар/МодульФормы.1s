Функция НайтиПоШтрихкоду(ШК,Единица="шт",Коэффициент=1) Экспорт
	Сам=Сам();

	ТЗ=глБД.ПолучитьТоварыПоШтрихкоду(ШК,1);


	Если ТЗ.КоличествоСтрок()=1 Тогда
		ТЗ.ПолучитьСтрокуПоНомеру(1);

		Единица=ТЗ.Unit;
		Если ПустоеЗначение(СокрЛП(Единица))=1 Тогда
			Единица="шт";
		КонецЕсли;
		Коэффициент=ТЗ.Count;
		Если ПустоеЗначение(Коэффициент)=1 Тогда
			Коэффициент=1;
		КонецЕсли;

		Возврат ТЗ.Объект;
	ИначеЕсли ТЗ.КоличествоСтрок()=0 Тогда
		Возврат 0;
	Иначе
		Возврат ТЗ;
	КонецЕсли;
КонецФункции

