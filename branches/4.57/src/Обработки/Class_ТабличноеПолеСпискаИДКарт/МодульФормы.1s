Процедура НастройкаПолей() Экспорт
	Сам=Сам();

	_База.НастройкаПолей();

	Сам.Колонки.Добавить("Код");
	Сам.Колонки.Добавить("Наименование");
	Сам.Колонки.Добавить("Процент");
	Сам.Колонки.Добавить("Продаж");



	Сам.Колонки.Код.Данные="ID";
	Сам.Колонки.Код.ГоризонтальноеВыравнивание=1;
	Сам.Колонки.Код.Ширина=8;
	Сам.Колонки.Код.Заголовок="ID";
