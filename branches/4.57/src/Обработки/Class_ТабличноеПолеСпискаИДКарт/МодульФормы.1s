	Сам.Колонки.Код.ШрифтЗаголовка=Сам.ШрифтЗаголовка;


	Сам.Колонки.Наименование.Данные="Client";
	Сам.Колонки.Наименование.ГоризонтальноеВыравнивание=1;
	Сам.Колонки.Наименование.Ширина=30;
	Сам.Колонки.Наименование.Заголовок="Владелец";
	Сам.Колонки.Наименование.ШрифтЗаголовка=Сам.ШрифтЗаголовка;
	Сам.Колонки.Наименование.ИзменениеРазмера=1;
	Сам.Колонки.Наименование.ЗнакУпорядочивания=1;

	Сам.Колонки.Процент.Данные="Percent";
	Сам.Колонки.Процент.ГоризонтальноеВыравнивание=1;
	Сам.Колонки.Процент.Ширина=5;
	Сам.Колонки.Процент.Заголовок="Процент";
	Сам.Колонки.Процент.ШрифтЗаголовка=Сам.ШрифтЗаголовка;
	Сам.Колонки.Процент.ИзменениеРазмера=1;
	Сам.Колонки.Процент.ЗнакУпорядочивания=1;

	Сам.Колонки.Продаж.Данные="Total";
