							ИначеЕсли ИмяПараметра=ВРЕГ("Clickable") Тогда			       
								
								АктивИкс.Объект.Clickable =Число(ЗначениеПараметра);
									
							ИначеЕсли ИмяПараметра=ВРЕГ("UseAntialiasing") Тогда	//В документации написано про поле UseAntialiasing
