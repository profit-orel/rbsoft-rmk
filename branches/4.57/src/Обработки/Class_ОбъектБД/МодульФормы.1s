Функция Записать() Экспорт
	Сам=Сам();
	Отказ=0;
	Если Сам.РежимТолькоЧтение()=1 Тогда
		Сам.УстановитьКодИОшибку(4001,"Попытка записи объекта в режиме ""Только чтение""");
		возврат 0;
	КонецЕсли;
	Сам.ПередЗаписью(Отказ);
	Если Отказ=1 Тогда
		Возврат 0;
	ИначеЕсли глБД.ЗаписатьОбъект(Данные)=1 Тогда
		Данные.ЭтоНовый=0;

		Сам.ПослеЗаписи();
		возврат 1;
	КонецЕсли;
	возврат 0;
КонецФункции	// Записать

Функция Удалить() Экспорт
	Сам=Сам();
	Отказ=0;
	Если Сам.РежимТолькоЧтение()=1 Тогда
		Сам.УстановитьКодИОшибку(4001,"Попытка удаления объекта в режиме ""Только чтение""");
		возврат 0;
	КонецЕсли;
	Сам.ПередУдалением(Отказ);
	Если Отказ=1 Тогда
		Возврат 0;
	ИначеЕсли глБД.УдалитьОбъект(Сам)=1 Тогда
		возврат 1;
	КонецЕсли;
	возврат 0;
КонецФункции

