// 1 - выбор одного элемента,
// 2 - множественный выбор,
//ИмяФормыСписка - имя формы, которую надо открыть
//                 считается, что форма находится в обработке "Class_"+ВидОбъекта+"_"+ИмяФормыСписка
//                 Если ИмяФормыСписка="ФормаСписка" и объект "Товар", то откроется форма обработки "Class_Товар_ФормаСписка

Функция ВыбратьОбъект(Данные="",РежимВыбора=1,ИмяФормыСписка="ФормаСписка") Экспорт
	Сам=Сам();
	Структура=СоздатьОбъект("Структура");
	Структура.Вставить("Результат",0);
	Структура.Вставить("РежимВыбора",РежимВыбора);
	Структура.Вставить("Объект",Сам);
	Структура.Вставить("Данные",Данные);


	ИмяОбработки=Сам.ПолучитьИмяОткрываемойФормы(ИмяФормыСписка);


	//Попытка
	//	МД=Метаданные.Обработка(ИмяОбработки);
	//	ИД=МД.Идентификатор;
	//Исключение
	//	ИмяОбработки="Class_ОбъектБД_ФормаСписка";
	//КонецПопытки;

	Попытка
		ОткрытьФормуМодально(ИмяОбработки,Структура);
	Исключение
		глДебаг(ОписаниеОшибки(),"Функция ОбъектБД::ВыбратьОбъект");
		глПредупреждение(ОписаниеОшибки());
		Возврат 0;
	КонецПопытки;


	Результат=Структура.Результат;
	Если Результат=1 Тогда
		Данные=Структура.Данные;
	КонецЕсли;
	возврат Результат;
КонецФункции
