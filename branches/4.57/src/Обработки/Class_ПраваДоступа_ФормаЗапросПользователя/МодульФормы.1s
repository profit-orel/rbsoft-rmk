Процедура ПриОткрытии()

	Если ПустоеЗначение(Форма.Параметр)=1 Тогда
		СтатусВозврата(0);
		Возврат;
	КонецЕсли;
	СтруктураПараметров=Форма.Параметр;
	Объект=СтруктураПараметров.Объект;

КонецПроцедуры //ПриОткрытии

Процедура ПослеСозданияФормы()
	Кнопки=СоздатьОбъект("Кнопки");
	Кнопки.КаталогКнопок(глСкин.КаталогСкина);
	Кнопки.УстановитьКонтекст(Контекст);


	лРежим=СтруктураПараметров.Данные.Режим;

	Если ПустоеЗначение(лРежим)=1 Тогда
	    лРежим="ПростойЗапрос";
	КонецЕсли;  //

	
	Форма.ИспользоватьСлой("Основной",2);

	ТабличноеПолеПользователей=СоздатьОбъект("ТабличноеПолеСпискаПользователей");
	ТабличноеПолеПользователей.ИнитДляВыбора(Контекст,"ТабличноеПолеСпискаПользователей");

	ТабличноеПолеПользователей.ЗаполнитьКассиров();

	Окна=СоздатьОбъект("Окна");


	Окна.СтильОкна(Форма,2);

	Активизировать("ТабличноеПолеСпискаПользователей",0);

	глОчиститьПодписку();
	глПодписатьсяНаСобытия(Объект);
	
КонецПроцедуры

Процедура ПослеОткрытия()
	Кнопки.АвтоРисование(1);
КонецПроцедуры

Процедура ТабличноеПолеСпискаПользователей_ВыполнитьВыбор(Пользователь,ДопДанные="") Экспорт

	ВыбранПользователь=Пользователь.Данные;
	ВыборСделан=0;
	Если Объект.ЗапросПароля(ВыбранПользователь,0,"Запрос пароля")=1 Тогда
		ВыборСделан=1;
		Форма.Закрыть();
	КонецЕсли;

КонецПроцедуры

