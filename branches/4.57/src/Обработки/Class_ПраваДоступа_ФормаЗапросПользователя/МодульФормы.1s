//Процедура ПриЗакрытии
//Назначение:
//
//Параметры:
//
//
Процедура ПриЗакрытии()
	Если ВыборСделан=0 Тогда

		Если Режим="БесконечныйЗапрос" Тогда
			СтатусВозврата(0);
		Иначе
			Форма.Параметр.Результат=0;
		КонецЕсли;  //

	ИначеЕсли ВыборСделан=1 Тогда
		Форма.Параметр.Результат=1;
		Форма.Параметр.Данные=ВыбранПользователь;
	ИначеЕсли ВыборСделан=2 Тогда
		Форма.Параметр.Результат=1;
		Форма.Параметр.Данные=Объект.ТекущийПользователь;

	КонецЕсли;  //
КонецПроцедуры //ПриЗакрытии



