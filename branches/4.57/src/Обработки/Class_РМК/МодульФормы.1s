			возврат Результат;
		Иначе
			глПредупреждение("Нет настроенных списков выбора.",10);
			Возврат 0;
		КонецЕсли;  //
	ИначеЕсли Объект.Прочитать(КодСписка)=1 Тогда

		СЗ=СоздатьОбъект("СписокЗначений");
		СЗ.Установить("РежимВыбора",1);
