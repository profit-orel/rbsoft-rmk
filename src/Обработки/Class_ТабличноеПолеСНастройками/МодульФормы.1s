КонецПроцедуры


Процедура ВосстановитьНастройки(тзНастройки) Экспорт
	Колонки = Сам().Колонки;
	КоличествоКолонок = Колонки.Количество();
	тзНастройки.ВыбратьСтроки();
	Пока тзНастройки.ПолучитьСтроку() = 1 Цикл
		Попытка
			Колонка = Колонки.Получить(тзНастройки.ИмяКолонки);
		Исключение
			Продолжить;
		КонецПопытки;

		Попытка
			Колонка.Ширина = тзНастройки.Ширина;
		Исключение
		КонецПопытки;

		Попытка
			Колонка.Видимость = тзНастройки.Видимость;
		Исключение
		КонецПопытки;

		Если тзНастройки.НомерСтроки <= КоличествоКолонок Тогда
			чИндекс = Колонки.Индекс(Колонка);
			Если тзНастройки.НомерСтроки <> (чИндекс+1) Тогда
				Колонки.Сдвинуть(чИндекс, тзНастройки.НомерСтроки - (чИндекс+1));
			КонецЕсли;
		КонецЕсли;

		Попытка
			Если тзНастройки.Сортировка <> 0 Тогда
				Если тзНастройки.Сортировка = 1 Тогда
					Сам().УстановитьСортировку(тзНастройки.ИмяКолонки, 1);
				Иначе
					Сам().УстановитьСортировку(тзНастройки.ИмяКолонки, -1);
				КонецЕсли;
			КонецЕсли;
		Исключение
		КонецПопытки;
	КонецЦикла;
КонецПроцедуры


