Функция КоличествоСтрокНаСтранице() Экспорт
Перем чЛево, чВерх, чПраво, чНиз, тпЛево, тпВерх, тпШрирна, тпВысота;	
	Сам=Сам();
	
	
	Сам.ПолучитьГраницыТекущейЯчейки(чЛево, чВерх, чПраво, чНиз,1);
	ВысотаЯчейки=чНиз-чВерх+1;
	
	Если ВысотаЯчейки=0 Тогда
		возврат 0;
	КонецЕсли;
	РасширениеФормы=СоздатьОбъект("РасширениеФормы");
	РасширениеФормы.УстановитьФорму(Сам.КонтекстВызывающейФормы.Форма);
	АтрибутТП=РасширениеФормы.ПолучитьАтрибут(ИдентификаторРеквизита);
	АтрибутТП.ПолучитьКоординаты(тпЛево, тпВерх, тпШрирна, тпВысота);
	
	возврат Цел(тпВысота/ВысотаЯчейки);
КонецФункции

Процедура ВНачало() Экспорт
	Сам=Сам();
	Если Сам.ТекущаяСтрока>1 Тогда
		Сам.ТекущаяСтрока=1;
	КонецЕсли;	
КонецПроцедуры

Процедура ВКонец() Экспорт
	Сам=Сам();
	Если Сам.ТекущаяСтрока<Сам.ПоставщикДанных.ТаблицаЗначений.КоличествоСтрок() Тогда
		Сам.ТекущаяСтрока=Сам.ПоставщикДанных.ТаблицаЗначений.КоличествоСтрок();
	КонецЕсли;	
КонецПроцедуры

Процедура СтраницаВверх() Экспорт
	Сам=Сам();
	СтрокНаСтранице=Сам.КоличествоСтрокНаСтранице();
	Если Сам.ТекущаяСтрока>СтрокНаСтранице Тогда
		Сам.ТекущаяСтрока=Сам.ТекущаяСтрока-СтрокНаСтранице;	
	Иначе
		Сам.ТекущаяСтрока=1;
	КонецЕсли;	
КонецПроцедуры

Процедура СтраницаВниз() Экспорт
	Сам=Сам();
	СтрокНаСтранице=Сам.КоличествоСтрокНаСтранице();
	
	Если Сам.ТекущаяСтрока+СтрокНаСтранице<Сам.ПоставщикДанных.ТаблицаЗначений.КоличествоСтрок() Тогда
		Сам.ТекущаяСтрока=Сам.ТекущаяСтрока+СтрокНаСтранице;	
	Иначе
		Сам.ТекущаяСтрока=Сам.ПоставщикДанных.ТаблицаЗначений.КоличествоСтрок();	
	КонецЕсли;	
КонецПроцедуры

Процедура АктивизироватьСледующий() Экспорт
	Сам=Сам();
	
	Если Сам.ТекущаяСтрока<Сам.ПоставщикДанных.ТаблицаЗначений.КоличествоСтрок() Тогда
		Сам.ТекущаяСтрока=Сам.ТекущаяСтрока+1;	
	КонецЕсли;	
	
КонецПроцедуры

Процедура АктивизироватьПредыдущий() Экспорт
	Сам=Сам();
	
	Если Сам.ТекущаяСтрока>1 Тогда
		Сам.ТекущаяСтрока=Сам.ТекущаяСтрока-1;
	КонецЕсли;	
	
КонецПроцедуры


