Процедура Выполнить()

	Объект.Сервер 		 = СокрЛП(Сервер);
    Объект.Порт 		 = Порт;
	Объект.Пользователь  = СокрЛП(Пользователь);
	Объект.Пароль 		 = СокрЛП(Пароль);
	Объект.БазаДанных 	 = СокрЛП(БазаДанных);

	Объект.НужноПереустановитьСоединение 	= НужноПереустановитьСоединение;
	Объект.ИспользоватьСжатие 				= ИспользоватьСжатие;
	Объект.ИспользоватьНовыеПароли 		    = ИспользоватьНовыеПароли;
	Объект.ИспользоватьИменованныеКаналы 	= ИспользоватьИменованныеКаналы;
	Объект.ИспользоватьГнезда 				= ИспользоватьГнезда;
	Объект.ГнездоUnix						= СокрЛП(ГнездоUnix);
КонецПроцедуры



Процедура ПриОткрытии()

	СтруктураПараметров=Форма.Параметр;
	Объект=СтруктураПараметров.Объект;

	Сервер 		 = Объект.Сервер;
    Порт 		 = Объект.Порт;
	Пользователь = Объект.Пользователь;
	Пароль 		 = Объект.Пароль;
	БазаДанных 	 = Объект.БазаДанных;

	НужноПереустановитьСоединение 	= Объект.НужноПереустановитьСоединение;
	ИспользоватьСжатие 				= Объект.ИспользоватьСжатие;
	ИспользоватьНовыеПароли 		= Объект.ИспользоватьНовыеПароли;
	ИспользоватьИменованныеКаналы 	= Объект.ИспользоватьИменованныеКаналы;
	ИспользоватьГнезда 				= Объект.ИспользоватьГнезда;
	ГнездоUnix						= Объект.ГнездоUnix;


	Форма.ИспользоватьЗакладки(1);
	Форма.Закладки.ДобавитьЗначение("Подключение");
	Форма.Закладки.ДобавитьЗначение("Запросы");
	Форма.ИспользоватьСлой("Подключение",2);

КонецПроцедуры

Процедура ПриВыбореЗакладки(Номер,Имя)
	Форма.ИспользоватьСлой(Имя,2);
КонецПроцедуры

Процедура ПроверитьПодключение()
	Если Объект.ДрайверSQL.ПроверитьСоединение()=1 Тогда
		Предупреждение("ОК!");
	Иначе
		Предупреждение("Нет соединения.
		|"+Объект.ДрайверSQL.ПоследняяОшибка());
	КонецЕсли;
КонецПроцедуры

Процедура Информация()
	Информация=Объект.ДрайверSQL.Информация();
КонецПроцедуры

Процедура Статистика()
	Статистика=Объект.ДрайверSQL.Статистика();
КонецПроцедуры

Функция СостояниеПодключения()
	Попытка
		Если Объект.ДрайверSQL.Подключен()=1 Тогда
		Возврат "Подключен.
		|#"+Объект.ДрайверSQL.НомерПоследнейОшибки()+"
		|"+Объект.ДрайверSQL.ПоследняяОшибка();
		Иначе
			Возврат "Не подключен.";
		КонецЕсли;
	Исключение
		Возврат ОписаниеОшибки();
	КонецПопытки;

КонецФункции

